        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/SiteImages/favicon.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Part Time</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview menu-open">
                            <a href="@Url.Action("Index", "Admin")" class="nav-link active">
                                <i class="nav-icon fas fa-tablet-alt"></i>
                                <p>
                                    Registration
                                </p>
                            </a>
                            <a href="@Url.Action("Users", "Admin")" class="nav-link">
                                <i class="nav-icon fas fa-cloud-download-alt"></i>
                                <p>
                                    Users
