                                        <ul class="list-group list-group-unbordered mb-3">
                                            <li class="list-group-item">
                                                <b>Completed Jobs</b> <a class="float-right">1,322</a>
                                            </li>
                                            <li class="list-group-item">
                                                <b>Ratings</b> <a class="float-right">4/5</a>
                                            </li>
                                            @*<li class="list-group-item">
                                                    <b>Friends</b> <a class="float-right">13,287 Profile/Coordinator </a>
                                                </li>*@
                                        </ul>

                                        <a href="profileView" target="_blank" class="btn btn-primary btn-block"><b>View & Update Full Profile</b></a>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                                <!-- About Me Box -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">About Me</h3>
                                    </div>
                                    <!-- /.card-header -->
