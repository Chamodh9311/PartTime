                                                <div class="tab-pane" id="settings">
                                                    <form class="table-responsive form-horizontal">
                                                        <div style="width:100%; margin:0 auto;">
                                                            <table id="SchedulerTable">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Name</th>
                                                                        <th>Brands</th>
                                                                        <th>From Date</th>
                                                                        <th>To Date</th>
                                                                        <th>Promoter Count</th>
                                                                        <th>City</th>
                                                                        <th>Town</th>
                                                                        <th>Time</th>
                                                                        <th>Payment</th>
                                                                        <th>Comments</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                            </table>
                                                        </div>
                                                        <style>
                                                            tr.even {
                                                                background-color: #F5F5F5 !important;
                                                            }
                                                        </style>


                                                    </form>
                                                </div>
                                                <!-- /.tab-pane -->
                                            </div>
                                            <!-- /.tab-content -->
                                        </div><!-- /.card-body -->
                                    </div>
                                    <!-- /.nav-tabs-custom -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div><!-- /.container-fluid -->
                    </div>
                </section>

            </div>
        </div>

        <div id="calnderModel" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <p>
                            Add Availability
                        </p>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class='col-sm-6'>
                                <label for="start">From date:</label>
                                <input type='date' class="form-control" id='fromDate' required pattern="\d{4}-\d{2}-\d{2}"/>
                            </div>
                            <div class='col-sm-6'>
                                <label for="start">To date:</label>
                                <input type='date' class="form-control" id='toDate'  required pattern="\d{4}-\d{2}-\d{2}"/>
                            </div>
                        </div>

                        <br />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-info" data-dismiss="modal">Save</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
